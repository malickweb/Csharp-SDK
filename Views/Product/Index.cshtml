@model IEnumerable<myWebApp.Models.Product>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Product page";
    var a = ViewData["KamRecoProduct"];
    int bar = 8;
    string k_col = "col-3";
}
@if (@a.ToString() == "8")
{
    bar = 8;
    k_col = "col-3";
}
else if (@a.ToString() == "12")
{
    bar = 12;
    k_col = "col-4";
}
else
{
    bar = 4;
    k_col = "col-6";
}
<h3>@ViewData["Title"]</h3>
<div class="row">
    @foreach (var item in Model)
    {
        @if(@item.Id == @bar) {
            break;
        }
        <div class="col @k_col py-3">
            <div class="card text-center mx-auto">
                <div class="card-body">
                    <img src="https://picsum.photos/200/200" alt="@item.Name" />
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Info</p>
                    <p class="card-text">@item.Price â‚¬</p>
                    @if (@item.Quantity != 1)
                    {
                        <p class="card-text">Product Quantity : <strong>@item.Quantity</strong>.</p>
                        <a class="btn btn-primary" asp-controller="Product" asp-action="@item.Id">Voir
                            le produit</a>
                    }
                    else
                    {
                        <p class="card-text text-danger bg-dark">Product Quantity </p>
                    }
                </div>
            </div>
        </div>
    }
</div>